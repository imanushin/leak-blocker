<ContentControl x:Class="LeakBlocker.AdminView.Desktop.Controls.Common.UpDowns.UpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:layouts="clr-namespace:LeakBlocker.AdminView.Desktop.Controls.Common.Layouts"
                x:ClassModifier="internal"
                 VerticalAlignment="Stretch"
                VerticalContentAlignment="Stretch"
                Focusable="False"
                Height="25">
    <layouts:SmartGrid Columns="Auto" Rows="*,*" VerticalAlignment="Stretch">
        <Button Grid.Row="0" Click="IncreaseValue" Focusable="False">
            <Viewbox>
                <Canvas Width="20" Height="10" Margin="5">
                    <Line X1="00" X2="10" Y1="10" Y2="00" Stroke="Black"/>
                    <Line X1="20" X2="10" Y1="10" Y2="00" Stroke="Black"/>
                </Canvas>
            </Viewbox>
        </Button>

        <Button Grid.Row="1" Click="DescreaseValue" Focusable="False">
            <Viewbox>
                <Canvas Width="20" Height="10" Margin="5">
                    <Line X1="00" X2="10" Y1="00" Y2="10" Stroke="Black" StrokeThickness="1" />
                    <Line X1="20" X2="10" Y1="00" Y2="10" Stroke="Black"/>
                </Canvas>
            </Viewbox>
        </Button>
    </layouts:SmartGrid>
</ContentControl>
