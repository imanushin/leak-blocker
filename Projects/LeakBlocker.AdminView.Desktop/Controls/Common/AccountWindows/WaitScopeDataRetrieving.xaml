<common:ToolWindow x:Class="LeakBlocker.AdminView.Desktop.Controls.Common.AccountWindows.WaitScopeDataRetrieving"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:common="clr-namespace:LeakBlocker.AdminView.Desktop.Controls.Common"
                   xmlns:layouts="clr-namespace:LeakBlocker.AdminView.Desktop.Controls.Common.Layouts"
                   xmlns:buttons="clr-namespace:LeakBlocker.AdminView.Desktop.Controls.Common.Buttons"
                   xmlns:animations="clr-namespace:LeakBlocker.AdminView.Desktop.Controls.Common.Animations"
                   RestrictHeight="Both"
                   RestrictWidth="Both"
                   x:ClassModifier="internal">
    <layouts:SmartGrid Rows="Auto,Auto" Columns="Auto,Auto">
        <animations:WaitIndicatorControl Height="32" Width="32" Margin="5"/>
        <TextBlock Grid.Column="1" Margin="5" Name="text" x:FieldModifier="private" VerticalAlignment="Center"/>
        <buttons:CancelButton Click="CancelClicked" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Stretch" Margin="5"/>
    </layouts:SmartGrid>
</common:ToolWindow>
